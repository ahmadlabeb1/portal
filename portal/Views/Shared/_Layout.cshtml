@using Microsoft.AspNetCore.Http.Features;
@{
//var dirPage=Request
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - وزارة الاقتصاد</title>
    <link rel="icon" href="~/Mne_logo.png" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/slider/css/camera.css" rel="stylesheet" />
    <link href="~/lib/owlSlider/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/lib/owlSlider/css/owl.theme.default.css" rel="stylesheet" />
    @*<link href="~/lib/owlSlider/css/owl.theme.green.min.css" rel="stylesheet" />*@
    <link href="~/lib/fncBox/css/jquery.fancybox.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/js/fontawesome.js"></script>
    <style>
        body {
            background: #f3f3f3;
        }

        .bg-topnav {
            background: linear-gradient(357deg, #f7f3f3, transparent),linear-gradient(179deg, #f7f3f3b0, #efecec14)
        }

        .bg-golde {
            background-color: #6a6f16d1;
        }

        .camera_thumb {
            /*visibility:hidden;*/
        }

        .larger-f {
            font-size: larger;
        }

        .bg-footer-1 {
            background-color: #e1e1e1c4;
        }

        .bg-footer-2 {
            background-color: silver;
        }

        .bg-footer-3 {
            background-color: #dfdede;
        }

        .border-golde {
            border: 1px solid #b8ae37;
        }
        .btn-raduis {
            border-radius: 25px;
        }
    </style>
</head>
<body>

    <header class="bg-topnav">
        <div class="container">
            <nav class="row align-items-center">

                <div class="col-lg-5 col-md-5 col-sm-12 ">
                    <partial name="_IconNavigation" />
                </div>
                <div class="col-lg-6 col-md-5 col-sm-12 align-image  @ViewBag.styleImage">
                    <a href="#"> <img src="~/Mne_logo.png" class="w-c" /></a>
                </div>
            </nav>
        </div>

    </header>
    <nav class="navbar navbar-expand-sm navbar-dark sticky-top bg-golde">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMNEt" aria-controls="navbarMNE" aria-expanded="false" aria-label="Toggle navigation">
            <span class="text-white navbar-toggler-icon"></span>
        </button>
        <div class="container">
          @await Html.PartialAsync("_navigationItem")
        </div>
    </nav>

    <partial name="_offcanvas" />
 

    <partial name="_MneSearch" />

    <div class="">

        <main role="main" @*class="pb-3"*@>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
     <partial name="_Footer" />
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/popper.min.js"></script>
    <script src="~/lib/slider/js/camera.js"></script>
    @*<script src="~/lib/slider/js/camera.min.js"></script>*@
    <script src="~/lib/slider/js/jquery.easing.1.3.js"></script>
    <script src="~/lib/owlSlider/js/owl.carousel.js"></script>
    <script src="~/lib/fncBox/js/jquery.fancybox.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $('.camera_wrap').camera({
            height: '20%',
            pagination: false,
            thumbnails: false,

        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("scripts_owl", required: false)
</body>
</html>
